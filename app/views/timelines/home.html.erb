<% provide(:title, 'Hôm nay bạn ăn gì?') %>

<% if user_signed_in? %>
  <div>
    <div class="row">
      <aside class="col-md-4">
        <h1><%= current_user.name %></h1>
        <p><%= current_user.email %></p>
        <%= render 'shared/stats' %>
      </aside>
      <div class="col-md-8">
        <%= render 'users/follow_form' %>
        <% if current_user.menus.any? %>
        <ol class="menus">
          <%= render @menus %>
        </ol>
        <%= will_paginate @menus%>
      <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div> Loi </div>
<% end %>