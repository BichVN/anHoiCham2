<p id="notice"><%= notice %></p>
<h1>Danh sách Menu</h1>
  <% @menus.each do |menu| %>
    <div class="timeline">
      <span class="timeline-label">
        <span class="label label-primary"><%= menu.created_at.strftime("%Y:%m:%d") %></span>
      </span>
      <div class="timeline-item timeline-item-right">
        <div class="timeline-point timeline-point-default">
          <i class="fa fa-money"></i>
        </div>
        <div class="timeline-event">
          <div class="timeline-heading post">
              <div class="user-block">
                <%= image_tag current_user.avatar.url, class: "img img-circle img-bordered-sm", width: "36px", height: "36px"%>
                <span class="username" style="margin-top: -55px;">
                  <%= link_to menu.user.name, menu.user %>
                  <% if current_user.id == menu.user.id %>
                    <%= link_to menu, method: :delete, data: { confirm: 'Bạn chắc chắn?' }, class: "pull-right btn-box-tool" do %>
                      <i class="fa fa-times" style="margin-top: 8px"></i>
                    <% end %>
                    <%= link_to edit_menu_path(menu), class: "pull-right btn-box-tool" do %>
                      <i class="fa fa-edit" style="margin-top: 8px"></i>
                    <% end %>
                  <% end %>
                </span>
                <span style="margin-left: 50px;"><%= link_to menu.menuName, menu %></span>
            </div>
          </div>
          <div class="timeline-body">
            <p><%= menu.content %><br/>
              <% menu.get_list.each do |img_link| %>
                <div class="col-sm-6">
                  <%= image_tag img_link, class: "img-responsive" %>
                </div>
              <% end %>
              <%= render menu.foods %>
            </p>
          </div>
          <div class="timeline-footer">
            <p class="text-right"><%= menu.updated_at.strftime("%H:%M:%S") %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<br>
