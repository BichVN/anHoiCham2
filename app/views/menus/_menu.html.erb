<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>menuName</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= menu.menuName %></td>
        <td><%= menu.content %></td>
        <td><%= menu.user.name %></td>
        <td><%= link_to "upvote", like_menu_path(menu), method: :put %></td>
        <td><%= link_to "downvote", dislike_menu_path(menu), method: :put %></td>
        <td><%= menu.score %></td>
    
        <%if menu.comments.nil? %>
           <%= render menu.comments %>
           <%= render 'shared/comment_form', menu: menu %>
        <%end%>
          <%= render 'tags/form'%>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
  
</table>

<br>

