<% provide(:title, 'Hôm nay bạn ăn gì?') %>

<% if user_signed_in? %>
  <div>
    <div class="row">
      <aside class="col-md-4">
        <h1><%= current_user.name %></h1>
      </aside>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <div class="col-md-8">
        <%= render 'users/follow_form' %>
        <%= render 'menus/form'%>
         <!-- <%= link_to 'New Menu', new_menu_path %> -->
        <% if current_user.menus.any? %>
        <h3>menus (<%= current_user.menus.count %>)</h3>
        <ol class="menus">
          <%= render @menus %>
        </ol>
        <%= will_paginate @menus%>
      <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div> Loi </div>
<% end %>