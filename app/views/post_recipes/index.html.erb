<p id="notice"><%= notice %></p>

<h1>Listing Post Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_recipes.each do |post_recipe| %>
      <tr>
        <td><%= post_recipe.content %></td>
        <td><%= link_to 'Show', post_recipe %></td>
        <td><%= link_to 'Edit', edit_post_recipe_path(post_recipe) %></td>
        <td><%= link_to 'Destroy', post_recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post recipe', new_post_recipe_path %>
