<div class="ht-section hs-contributor content-position">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="hs-content">
                    <h3>Name: <%= @user.name %></h3>
                    <h3>Email: <%= @user.email %></h3>
                    <div class="col-md-8">
                        <%= render 'follow_form'%>
                      </div>
                    <div class="col-md-8">
                          <% if @user.menus.any? %>
                            <h3>menus(<%= @user.menus.count %>)</h3>
                             <%= render @menus %>
                            <%= will_paginate @menus %>
                          <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
