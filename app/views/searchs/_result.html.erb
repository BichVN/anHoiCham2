<li>
  <%if object.is_a? Menu%>
    <table>
      <thead>
        <tr>
          <th>menuName</th>
          <th>Content</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= link_to object.menuName, menu_path(object) %></td>
          <td><%= object.content %></td>
          <td><%= object.user.name %></td>
        </tr>
      </tbody>
    </table>
  <% elsif object.is_a? User %>
    <h3>Name: <%= link_to object.name, user_path(object) %></h3>
    <h3>Email: <%= object.email %></h3>
  <% end %>
</li>
