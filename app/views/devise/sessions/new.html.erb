<div class="col-md-6 col-xs-12 col-md-offset-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
    <div class="form-group text-center text-uppercase">
      <legend><h2>Đăng nhập</h2></legend>
    </div>
    <% if flash.any? %>
    <div class="alert alert-danger alert-signin">
      <ul>
        <% flash.each do |key, value| %>
          <li><%= value %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
      <label for="user" class="col-md-3 control-label">Email</label>
      <div class="col-md-9">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group">  
      <label for="password" class="col-md-3 control-label">Mật khẩu</label>
      <div class="col-md-9">
        <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-12 text-right">
        <%= f.submit "Đăng nhập", class: "btn btn-primary" %>
      </div>
    </div>

    <div class="clearfix"></div>
    <div class="login-sns-page pull-right">
      <legend style="font-size: 12px; text-align: right"> 
      <p>Nếu bạn chưa có tài khoản mời
      <%= link_to "đăng ký", new_registration_path(resource_name), {style: "text-decoration: underline !important;font-style: italic"} %><br />
      </p>
      </legend>
      <label class="text-uppercase">Đăng nhập với mạng xã hội: </label>
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path( :facebook ),class: "btn btn-lg btn-primary" %>
    <%= link_to "Sign in with Twitter", user_omniauth_authorize_path( :twitter ),class: "btn btn-lg btn-primary" %>
    <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2),class: "btn btn-lg btn-primary"  %>
      </div>
  <% end %>
</div>
